{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-Iinclude",

                "${cwd}/src/*.cpp",
                "${cwd}/src/base_elements/*.cpp",
                "${cwd}/src/gui_elements/*.cpp",
                "${cwd}/src/rendering/*.cpp",

                "-o",
                "${cwd}/bin/SDL_base",
                "-m64",
                "-Wall",

                "-lSDL2main",
                "-lSDL2",
                "-lSDL2_image",
                "-lSDL2_ttf",
                "-lSDL2_mixer"
            ],
            "options": {
                //"cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}